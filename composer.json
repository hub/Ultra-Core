{
    "name": "hub/ultra-core",
    "description": "Hub Culture's Ultra core calculations and management library",
    "type": "library",
    "authors": [
        {
            "name": "Tharanga Kothalawala",
            "email": "tharanga.kothalawala@hubculture.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "ext-mysqli": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "psr/log": "~1.0",
        "doctrine/dbal": "^2.5"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.8",
        "mockery/mockery": "^0.9"
    },
    "autoload": {
        "psr-4": {
            "Hub\\UltraCore\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hub\\UltraCore\\": "tests/"
        }
    },
    "suggest": {
        "jenssegers/mongodb": "Allows querying a MongoDb to get the currency rates. (MongoBasedCurrencyRatesProvider)"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    }
}
